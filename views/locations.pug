extends layout

block links
	link(rel='stylesheet', href='css/style-locations.css')
	link(rel='stylesheet', href='css/jqvmap.min.css')

block content
	#pages
		
		//- Locations Pop-up 
		#loc-modal.modal.fade
			.modal-dialog.modal-dialog-centered
				.modal-content

					//- header
					.modal-header
						.modal-title placeholder

					//- body
					.modal-body
						p placeholder text

		//- LOCATIONS PAGE
		#locations-page
			#page-header
				h1 Locations
			#can-map.map
	
			#usa-map.map
			

block endscripts
	script(src='js/jquery.vmap.min.js')
	script(src='js/jquery.vmap.usa.js')
	script(src='js/jquery.vmap.canada.js')
	script(src='js/script-locations.js')
